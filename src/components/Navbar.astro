---
import ColorModeToggle from "./ColorModeToggle.astro";
import Navlink from "./Navlink.astro";
type NavItemProps = { displayName: string; slug: string };

let NavItems: NavItemProps[] = [
  {
    displayName: "home",
    slug: "/",
  },
  {
    displayName: "blog",
    slug: "/blog",
  },
  {
    displayName: "projects",
    slug: "/projects",
  },
];
---

<nav class="w-full py-2 my-12 tracking-tight text-gray-800 dark:text-gray-500 flex items-center" transition:animate="none">
  <ul class="flex">
    {NavItems.map((item) => <Navlink {...item} />)}
  </ul>

  <div class="ml-auto gap-1" transition:persist="color-mode-toggle">
    <ColorModeToggle />
  </div>
</nav>

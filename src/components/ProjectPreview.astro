---
import { Image } from "astro:assets";
type Props = {
  title: string;
  desc: string;
  ghLink?: string;
  liveLink?: string;
  blogLink: string;
  image?: ImageMetadata;
};
import ProjectDummyImage from "../content/project Dummy.png";
const {
  props,
  props: { title, desc, ghLink, liveLink, blogLink, image },
} = Astro;
---

<div>
  <a target="_blank" rel="no-referrer" href={props.ghLink} class="font-semibold no-underline" >

    <article
      class="border-t no-underline bg-rose-50/50 dark:bg-neutral-900/60 rounded-t px-3 py-2 w-full my-2 group border-purple-500 rounded flex flex-col sm:flex-row gap-6 items-center sm:items-start"
    >

      <div class="grow">
        <h2
          class="!text-lg capitalize flex font-medium gap-1 items-center mt-2 w-full grow justify-between group-hover:text-purple-500 duration-200"
          transition:name={blogLink + "heading"}
        >
          {title}
          <svg
            width="12"
            height="12"
            viewBox="0 0 12 12"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            class="rotate-45 text-gray-400 group-hover:text-purple-600"
          >
            <path
              d="M2.07102 11.3494L0.963068 10.2415L9.2017 1.98864H2.83807L2.85227 0.454545H11.8438V9.46023H10.2955L10.3097 3.09659L2.07102 11.3494Z"
              fill="currentColor"></path>
          </svg>
        </h2>
        <p class="text-sm dark:opacity-80 mt-3 line-clamp-3 text-ellipsis">
          {desc}
        </p>
      </div>
    </article>
  </a>

  </p>
</div>

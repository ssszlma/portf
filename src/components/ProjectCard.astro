---
import Icon from "./Icon.astro";

type Props = {
  title: string;
  desc: string;
  ghLink?: string;
  liveLink?: string;
  blogLink: string;
  image?: ImageMetadata;
};
const {
  props,
  props: { ghLink, liveLink, blogLink },
} = Astro;
---

<div>
  <a target="_blank" rel="no-referrer" href={props.ghLink} class=` border-t no-underline  bg-neutral-100/50 dark:bg-neutral-900/60 rounded-t flex flex-col items-start justify-between px-3 py-2 w-full my-2 group border-purple-500 ` >

    <h3
      class="!text-base capitalize flex gap-1 items-center mt-2 w-full justify-between group-hover:text-purple-500 duration-200"
    >
      {props.title}
      <svg
        width="12"
        height="12"
        viewBox="0 0 12 12"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        class="rotate-45 text-gray-400 group-hover:text-purple-600"
      >
        <path
          d="M2.07102 11.3494L0.963068 10.2415L9.2017 1.98864H2.83807L2.85227 0.454545H11.8438V9.46023H10.2955L10.3097 3.09659L2.07102 11.3494Z"
          fill="currentColor"></path>
      </svg>
    </h3>
    <p class="text-sm dark:opacity-80 mt-3 line-clamp-3 text-ellipsis">
      {props.desc}
    </p>
  </a>

  </a>
</div>
